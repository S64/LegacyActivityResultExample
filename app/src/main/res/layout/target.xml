<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/finishWithOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish w/ OK"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/finishWithCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish w/ Cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/finishWithOk"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/finishWithNothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish w/ Nothing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/finishWithCancel"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>